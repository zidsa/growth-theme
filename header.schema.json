{
  "icon": "fa fa-square",
  "name": {
    "ar": "أعلى الصفحة",
    "en": "Header"
  },
  "groups": [
    {
      "id": "header",
      "icon": "fa fa-cog",
      "name": {
        "ar": "إعدادات الرأس",
        "en": "Header Settings"
      },
      "settings": [
        {
          "id": "options",
          "type": "checkboxes",
          "label": {
            "ar": "الخيارات",
            "en": "Options"
          },
          "options": [
            {
              "label": {
                "ar": "إخفاء اللغة",
                "en": "Hide language"
              },
              "value": "hide_language"
            },
            {
              "label": {
                "ar": "إخفاء اسم الدولة",
                "en": "Hide country"
              },
              "value": "hide_country"
            }
          ]
        }
      ]
    },
    {
      "id": "logo",
      "icon": "fa fa-image",
      "name": {
        "ar": "الشعار",
        "en": "Logo"
      },
      "settings": [
        {
          "id": "desktop",
          "type": "image",
          "label": {
            "ar": "شعار سطح المكتب",
            "en": "Desktop Logo"
          },
          "info": {
            "ar": "ارفع صورة بحجم 200 × 80 بكسل (اختياري)",
            "en": "Upload image 200 × 80 pixels (optional)"
          }
        },
        {
          "id": "mobile",
          "type": "image",
          "label": {
            "ar": "شعار الجوال",
            "en": "Mobile Logo"
          },
          "info": {
            "ar": "ارفع صورة بحجم 150 × 60 بكسل (اختياري)",
            "en": "Upload image 150 × 60 pixels (optional)"
          }
        }
      ]
    },
    {
      "id": "announcement_bar",
      "icon": "fa fa-bullhorn",
      "name": {
        "ar": "شريط الإعلانات",
        "en": "Announcement Bar"
      },
      "settings": [
        {
          "id": "display",
          "type": "checkbox",
          "label": {
            "ar": "إظهار شريط الإعلانات",
            "en": "Display Announcement Bar"
          },
          "default": false
        },
        {
          "id": "text",
          "type": "text",
          "label": {
            "ar": "النص",
            "en": "Text"
          },
          "default": ""
        },
        {
          "id": "url",
          "type": "text",
          "label": {
            "ar": "الرابط",
            "en": "Link URL"
          },
          "info": {
            "ar": "في حال كان الحقل فارغًا لن يتم الانتقال للرابط عند الضغط",
            "en": "If empty, clicking won't navigate to any link"
          },
          "default": ""
        },
        {
          "id": "page_display",
          "type": "select",
          "label": {
            "ar": "عرض شريط الإعلانات في",
            "en": "Display Announcement Bar In"
          },
          "default": "all",
          "options": [
            {
              "label": {
                "ar": "جميع الصفحات",
                "en": "All pages"
              },
              "value": "all"
            },
            {
              "label": {
                "ar": "الصفحة الرئيسية فقط",
                "en": "Home page only"
              },
              "value": "home"
            }
          ]
        }
      ]
    }
  ]
}
