{#
  Logo & Social Media Section
  Displays store logo centered with social media links below
#}

<section
  section-id="{{ sectionId }}"
  class="bg-secondary px-4 md:px-16"
>
  <div class="theme-container flex flex-col items-center gap-16 py-8">
    {# Logo #}
    <div class="flex items-center justify-center">
      {% if settings.logo_logo_desktop or settings.logo_logo_mobile %}
        <img
          width="106"
          height="44"
          src="{{ image_url(settings.logo_logo_desktop | default(settings.logo_logo_mobile) | default(store.logo), w=212, q=90, f='auto') }}"
          class="hidden md:block"
          alt="{{ store.name }}"
        />
        <img
          width="106"
          height="44"
          src="{{ image_url(settings.logo_logo_mobile | default(settings.logo_logo_desktop) | default(store.logo), w=212, q=90, f='auto') }}"
          class="block md:hidden"
          alt="{{ store.name }}"
        />
      {% else %}
        <img
          width="106"
          height="44"
          src="{{ image_url(store.logo, w=212, q=90, f='auto') }}"
          alt="{{ store.name }}"
        />
      {% endif %}
    </div>

    {# Social Media Links #}
    {% set has_social = store.settings.contact.facebook or store.settings.contact.instagram or store.settings.contact.twitter or store.settings.contact.snapchat or store.settings.contact.tiktok or store.settings.contact.youtube or store.settings.contact.linkedin %}
    {% if has_social %}
      <div class="flex flex-col items-center gap-2">
        <span class="text-foreground text-sm">
          {% if store.settings.contact.title %}
            {{ store.settings.contact.title }}
          {% else %}
            {{ _("Follow us") }}
          {% endif %}
        </span>
        <div class="flex items-center gap-3">
          {% if store.settings.contact.facebook %}
            <a
              href="https://www.facebook.com/{{ store.settings.contact.facebook }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">Facebook</span>
              <svg
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="size-8"
              >
                <path
                  d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"
                ></path>
              </svg>
            </a>
          {% endif %}
          {% if store.settings.contact.instagram %}
            <a
              href="https://www.instagram.com/{{ store.settings.contact.instagram }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">Instagram</span>
              <svg
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="size-8"
              >
                <path
                  d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"
                ></path>
              </svg>
            </a>
          {% endif %}
          {% if store.settings.contact.linkedin %}
            <a
              href="https://www.linkedin.com/company/{{ store.settings.contact.linkedin }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">LinkedIn</span>
              <svg
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="size-8"
              >
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
          {% endif %}
          {% if store.settings.contact.twitter %}
            <a
              href="https://twitter.com/{{ store.settings.contact.twitter }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">X</span>
              <svg
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="size-8"
              >
                <path
                  d="M13.6823 10.6218L20.2391 3H18.6854L12.9921 9.61788L8.44486 3H3.2002L10.0765 13.0074L3.2002 21H4.75404L10.7663 14.0113L15.5685 21H20.8131L13.6819 10.6218H13.6823ZM11.5541 13.0956L10.8574 12.0991L5.31391 4.16971H7.70053L12.1742 10.5689L12.8709 11.5655L18.6861 19.8835H16.2995L11.5541 13.096V13.0956Z"
                ></path>
              </svg>
            </a>
          {% endif %}
          {% if store.settings.contact.youtube %}
            <a
              href="https://www.youtube.com/{{ store.settings.contact.youtube }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">YouTube</span>
              <svg
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="size-8"
              >
                <path
                  d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                ></path>
              </svg>
            </a>
          {% endif %}
          {% if store.settings.contact.snapchat %}
            <a
              href="https://www.snapchat.com/add/{{ store.settings.contact.snapchat }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">Snapchat</span>
              <svg
                viewBox="0 0 512.016 512.016"
                fill="currentColor"
                aria-hidden="true"
                class="size-6"
              >
                <path
                  d="M500.459,375.368c-64.521-10.633-93.918-75.887-97.058-83.294c-0.06-0.145-0.307-0.666-0.375-0.819c-3.234-6.571-4.036-11.904-2.347-15.838c3.388-8.013,17.741-12.553,26.931-15.462c2.586-0.836,5.009-1.604,6.938-2.372c18.586-7.339,27.913-16.717,27.716-27.895c-0.179-8.866-7.134-17.007-17.434-20.651c-3.55-1.485-7.774-2.295-11.887-2.295c-2.842,0-7.066,0.401-11.102,2.287c-7.868,3.678-14.865,5.658-20.156,5.888c-2.355-0.094-4.139-0.486-5.427-0.922c0.162-2.79,0.35-5.658,0.529-8.585l0.094-1.493c2.193-34.807,4.915-78.123-6.673-104.081c-34.27-76.834-106.999-82.807-128.478-82.807l-10.018,0.094c-21.436,0-94.029,5.965-128.265,82.756c-11.614,26.018-8.866,69.316-6.664,104.115c0.213,3.422,0.427,6.758,0.614,10.01c-1.468,0.503-3.584,0.947-6.46,0.947c-6.161,0-13.542-1.997-21.931-5.922c-12.126-5.683-34.295,1.911-37.291,17.647c-1.63,8.516,1.801,20.796,27.383,30.908c1.988,0.785,4.489,1.587,7.561,2.56c8.576,2.722,22.929,7.27,26.325,15.266c1.681,3.951,0.879,9.284-2.662,16.512c-1.263,2.944-31.65,72.124-98.765,83.174c-6.963,1.143-11.93,7.322-11.537,14.353c0.111,1.954,0.563,3.917,1.399,5.897c5.641,13.193,27.119,22.349,67.55,28.766c0.887,2.295,1.92,7.006,2.509,9.737c0.853,3.9,1.749,7.927,2.97,12.1c1.229,4.224,4.881,11.307,15.445,11.307c3.575,0,7.714-0.811,12.211-1.681c6.468-1.271,15.309-2.995,26.274-2.995c6.084,0,12.416,0.546,18.825,1.604c12.092,2.005,22.699,9.506,35.004,18.202c18.116,12.809,34.586,22.605,67.524,22.605c0.87,0,1.732-0.026,2.577-0.085c1.22,0.06,2.449,0.085,3.695,0.085c28.851,0,54.246-7.62,75.494-22.63c11.742-8.311,22.835-16.162,34.935-18.176c6.426-1.058,12.766-1.604,18.85-1.604c10.513,0,18.901,1.348,26.385,2.816c5.06,0.998,9.02,1.476,12.672,1.476c7.373,0,12.8-4.053,14.874-11.127c1.195-4.113,2.091-8.021,2.961-12.015c0.461-2.125,1.57-7.211,2.509-9.66c39.851-6.34,60.203-15.138,65.835-28.297c0.845-1.894,1.34-3.9,1.476-6.033C512.372,382.707,507.422,376.529,500.459,375.368z"
                ></path>
              </svg>
            </a>
          {% endif %}
          {% if store.settings.contact.tiktok %}
            <a
              href="https://www.tiktok.com/@{{ store.settings.contact.tiktok }}"
              target="_blank"
              rel="noopener"
              class="text-foreground transition-opacity hover:opacity-70"
            >
              <span class="sr-only">TikTok</span>
              <svg
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
                class="size-8"
              >
                <path
                  d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"
                ></path>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>

  {# Section height styles #}
  <style>
    [section-id="{{ sectionId }}"] {
      min-height: {{ settings.min_height_mobile | default(200) }}px;
    }

    @media (min-width: 768px) {
      [section-id="{{ sectionId }}"] {
        min-height: {{ settings.min_height_desktop | default(280) }}px;
      }
    }
  </style>
</section>
