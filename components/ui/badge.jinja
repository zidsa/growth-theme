{# Base classes for all badges #}
{% set base_classes = 'inline-flex w-fit items-center gap-1 px-2 py-1 rounded text-[16px] leading-4 font-normal [font-variant:all-small-caps] [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg]:size-4' %}

{# Variant classes #}
{% if variant == 'filled' or not variant %}
  {% set variant_classes = 'bg-foreground text-primary' %}
{% elif variant == 'outlined' %}
  {% set variant_classes = 'border border-[#B5B5B5] text-primary' %}
{% else %}
  {% set variant_classes = '' %}
{% endif %}

{# Combine all classes #}
{% set all_classes = base_classes + ' ' + variant_classes + ' ' + (class|default('')) %}

{# Render as link or span #}
{% if href %}
  <a
    href="{{ href }}"
    class="{{ all_classes }}"
    {{ attrs|safe }}
  >
    {{ content|safe }}
  </a>
{% else %}
  <span
    class="{{ all_classes }}"
    {{ attrs|safe }}
  >
    {{ content|safe }}
  </span>
{% endif %}
