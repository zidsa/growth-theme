{#
  Products Carousel Component

  Props:
  - products: array of product objects
  - title: string (optional) - section title
  - more_url: string (optional) - URL for "See more" link
  - more_text: string (optional) - text for "See more" link
  - carousel_id: string (required) - unique ID for the carousel
  - columns_desktop: string (optional) - number of visible columns on desktop ('2', '3', '4')
  - columns_mobile: string (optional) - number of visible columns on mobile ('1', '2')
  - image_aspect_ratio: string (optional) - product card image aspect ratio ('adapt', 'square', 'portrait')
#}

{% set columns_desktop = columns_desktop | default(card_columns_desktop) | default('4') %}
{% set columns_mobile = columns_mobile | default(card_columns_mobile) | default('1') %}
{% set image_aspect_ratio = image_aspect_ratio | default(card_image_aspect_ratio) | default('adapt') %}

{% set carousel_id = carousel_id or 'products-carousel-' ~ range(1000, 9999) | random %}

{% if products and products|length > 0 %}
  <div
    class="flex flex-col gap-6"
    data-products-carousel="{{ carousel_id }}"
    data-carousel
    data-carousel-align="start"
  >
    {# Header #}
    {% if title %}
      <div class="flex items-center justify-between">
        <h2 class="text-foreground text-xl md:text-2xl font-semibold tracking-tight">{{ title }}</h2>
        {% if more_url and more_text %}
          <a
            href="{{ more_url }}"
            class="text-foreground text-sm hidden items-center gap-2 px-4 py-3 md:flex"
          >
            {{ more_text }}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              class="rtl:rotate-180"
            >
              <path
