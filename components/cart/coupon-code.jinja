<div
  class="flex flex-col gap-2 py-4"
  data-coupon-section
>
  <h3 class="text-foreground text-tagline">{{ _("Coupon code") }}</h3>

  {% if cart.coupon and cart.coupon.code %}
    <div
      class="border-border inline-flex w-fit items-center gap-2 rounded border px-3 py-2"
      data-applied-coupon
    >
      <svg
        class="text-foreground size-4 shrink-0"
        viewBox="0 0 16 16"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M13.333 7.333V4.667A.667.667 0 0012.667 4h-10A.667.667 0 002 4.667v2.666a1.333 1.333 0 010 2.667v2.667c0 .368.299.666.667.666h10a.667.667 0 00.666-.666V9.333a1.333 1.333 0 010-2.667z"
          fill="currentColor"
        />
      </svg>
      <span class="text-foreground text-tagline uppercase">{{ cart.coupon.code }}</span>
      <button
        type="button"
        class="text-foreground hover:text-destructive transition-colors"
        data-action="coupon-remove"
        aria-label="{{ _('Remove coupon') }}"
        data-coupon-delete-btn
      >
        <svg
          class="size-4"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          data-coupon-delete-icon
        >
          <path d="M18 6 6 18" />
          <path d="m6 6 12 12" />
        </svg>
        <svg
          class="hidden size-4 animate-spin"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          data-coupon-delete-spinner
        >
          <path d="M21 12a9 9 0 1 1-6.219-8.56" />
        </svg>
      </button>
    </div>
  {% else %}
    <form
      class="flex items-center gap-2"
      data-coupon-form
    >
      <div class="flex-1">
        <input
          type="text"
          name="coupon_code"
          id="coupon-code-input"
          placeholder="{{ _('Coupon code or gift card') }}"
          required
          data-coupon-input
          class="form-input"
        />
      </div>
      <button
        type="submit"
        class="btn btn-filled btn-lg"
        disabled
        data-coupon-submit-btn
      >
        <span data-coupon-submit-text>{{ _("Apply") }}</span>
        <svg
          class="hidden size-5 animate-spin"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          data-coupon-submit-spinner
        >
          <path d="M21 12a9 9 0 1 1-6.219-8.56" />
        </svg>
      </button>
    </form>
  {% endif %}
</div>
